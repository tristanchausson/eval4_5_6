<link rel="stylesheet" type="text/css" href="/build/main.css">

<h1>Modifier un article</h1>

<nav>
	<ul>
		<li><a href="/epicerie/accueil">Retour à l'accueil</a></li>
		<li><a href="/epicerie/statistiques">Statistiques</a></li>
		<li><a href="/epicerie/historique">Historique</a></li>
		<li><a href="/epicerie/mouvement">Saisie de mouvement</a></li>
		<li><a href="/epicerie/liste">Liste des articles</a></li>
		<li><a href="/epicerie/creer">Créer  un article</a></li>
		<li><a href="/epicerie/modifier">Modifier un article</a></li>
	</ul>
</nav>
<div class="container-fluid">
	<form id="article" action="" method="post">
		<div class="row">
			<div class="col-1"></div>
					<div class="col-2"><input type="text" name="nouvelArticle" value="{{ nom }}"></div>
					<div class="col-2"><input type="number" step=".01" name="prixArticle" value="{{ prix }}"></div>
					<div class="col-2"><select name="categorie">
						<option value="">Catégorie</option>
							{% for categorie in categorie %}
								{% if categorie.categorieNom == cat %}
									<option value="{{ categorie.categorieNom }}" selected>
										{{ categorie.categorieNom }}
									</option>
								{% else %}
									<option value="{{ categorie.categorieNom }}">
										{{ categorie.categorieNom }}
									</option>
								{% endif %}
							{% endfor %}
					</select></div>
					<div class="col-2"><select name="unite">
						<option value="">Unité</option>
							{% for unite in unite %}
								{% if unite.uniteType == unit %}
									<option value="{{ unite.uniteType }}" selected>
										{{ unite.uniteType }}
									</option>
								{% else %}
									<option value="{{ unite.uniteType }}">
										{{ unite.uniteType }}
									</option>
								{% endif %}
							{% endfor %}
					</select></div>
					<div class="col-2"><select name="fournisseur">
						<option value="">Fournisseur</option>
							{% for fournisseur in fournisseur %}
								{% if fournisseur.fournisseurNom == frs %}
									<option value="{{ fournisseur.fournisseurNom }}" selected>
										{{ fournisseur.fournisseurNom }}
									</option>
								{% else %}
									<option value="{{ fournisseur.fournisseurNom }}">
										{{ fournisseur.fournisseurNom }}
									</option>
								{% endif %}
							{% endfor %}
					</select></div>
			<div class="col-1"></div>
			<div class="col"></div>
					<div class="col-2"><input class="valider" type="submit" name="valider" value="Valider"></div>
			<div class="col"></div>
		</div>
	</form>
</div>