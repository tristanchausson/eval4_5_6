<form id="article" action="" method="post">
	<input type="text" name="nouvelArticle" placeholder="Article">	
	<input type="number" step=".01" name="prixArticle" placeholder="Prix de vente">
	<select name="categorie">
		<option selected="selected" value="">Catégorie</option>
			{% for categorie in categorie %}
				<option value="{{ categorie.categorieNom }}">
					{{ categorie.categorieNom }}
				</option>
			{% endfor %}
	</select>
	<select name="unite">
		<option selected="selected" value="">Unité</option>
			{% for unite in unite %}
				<option value="{{ unite.uniteType }}">
					{{ unite.uniteType }}
				</option>
			{% endfor %}
	</select>
	<select name="fournisseur">
		<option selected="selected" value="">Fournisseur</option>
			{% for fournisseur in fournisseur %}
				<option value="{{ fournisseur.fournisseurNom }}">
					{{ fournisseur.fournisseurNom }}
				</option>
			{% endfor %}
	</select>
	<input type="submit" name="valider" value="Valider">
</form>