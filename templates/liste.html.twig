<link rel="stylesheet" type="text/css" href="/build/main.css">

<h1>Liste de tous les articles</h1>

<nav>
	<ul>
		<li><a href="/epicerie/accueil">Retour à l'accueil</a></li>
		<li><a href="/epicerie/statistiques">Statistiques</a></li>
		<li><a href="/epicerie/historique">Historique</a></li>
		<li><a href="/epicerie/mouvement">Saisie de mouvement</a></li>
		<li><a href="/epicerie/liste">Liste des articles</a></li>
		<li><a href="/epicerie/creer">Créer  un article</a></li>
		<li><a href="/epicerie/modifier">Modifier un article</a></li>
	</ul>
</nav>

<div class="cointainer-fluid">
	<form action="" method="post">
		<div class="row">
			<div class="col-3"></div>
				{% for article in articles %}
					<div class="col">
						<div class="card h-100">
							<div class="card-body">
								<h3><a href="/epicerie/modifier?a={{ article.idarticles }}">{{ article.articleNom }}</a></h3><br/>
								<button name="supprimer" value="{{ article.articleNom }}">Supprimer</button>
							</div>
						</div>
					</div>
				{% endfor %}
				<br/>
			<div class="col-3"></div>
		</div>
		<div class="row">
			<div class="col"></div>
			<div class="col-2">
				<a href="/epicerie/creer"><input class="valider" type="button" name="creer" value="Ajouter un nouvel article"></a>
			</div>
			<div class="col"></div>
		</div>
	</form>
</div>